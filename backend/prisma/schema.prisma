generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id           Int      @id @default(autoincrement()) @map("Technical id")
  uuid         String   @unique @default(uuid()) @map("Public uuid")
  name         String   @map("Name") @db.VarChar(30)
  email        String   @unique @map("Unique email") @db.VarChar(60)
  passwordHash String   @map("Hashed Password")
  role         Role     @default(USER) @map("Role")
  createdAt    DateTime @default(now()) @map("User creation data & time")
  admin        Admin?
}

model Admin {
  id          Int    @id @map("ID")
  user        User   @relation(fields: [id], references: [id])
  permissions String @map("Permissions") @db.Text
}

model Product {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  price     Float
  oldPrice  Float?
  shortDesc String?
  mainImage String?
  gallery   String[]
  videoUrl  String?
  sections  Section[]
  specs     Json?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Section {
  id        Int     @id @default(autoincrement())
  title     String?
  text      String?
  image     String?
  video     String?
  order     Int
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}

model ResetCode {
  email               String    @id
  code                String
  attempts            Int       @default(0)
  resetToken          String?   @unique
  resetTokenExpiresAt DateTime?
  updatedAt           DateTime  @updatedAt
}

model ConfirmEmailCode {
  email                 String    @id
  code                  String
  attempts              Int       @default(0)
  confirmToken          String?   @unique
  confirmTokenExpiresAt DateTime?
  updatedAt             DateTime  @updatedAt
}

model Feedback {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String
  message   String
  createdAt DateTime @default(now())
}
